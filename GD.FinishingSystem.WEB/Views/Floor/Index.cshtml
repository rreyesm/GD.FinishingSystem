@model IEnumerable<GD.FinishingSystem.Entities.Floor>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-4">Floors</h1>

@if (User.IsInRole("FloorAdd") || User.IsInRole("FloorFull") || User.IsInRole("AdminFull"))
{
    <p>
        <a asp-action="Create" class="btn btn-sm btn-outline-light border-dark btn-dark">
            <i class="lni lni-circle-plus"></i> Create New
        </a>
    </p>

}
<table class="table table-sm table-hover table-responsive-md">
    <thead>
        <tr>
            <th colspan="3">Floor List</th>
        </tr>
        <tr>
            <th>
                <i class="lni lni-line-dashed"></i>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FloorName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FloorID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FloorName)
                </td>
                <td>
                    @if (User.IsInRole("FloorUp") || User.IsInRole("FloorFull") || User.IsInRole("AdminFull"))
                    {
                        <a asp-action="Edit" asp-route-floorid="@item.FloorID">
                            <i class="lni lni-slice"></i>
                        </a>
                        @Html.Raw(" | ");
                    }

                    @if (User.IsInRole("FloorShow") || User.IsInRole("FloorFull") || User.IsInRole("AdminFull"))
                    {
                        <a asp-action="Details" asp-route-floorid="@item.FloorID">
                            <i class="lni lni-question-circle"></i>
                        </a>
                        @Html.Raw(" | ");
                    }

                    @if (User.IsInRole("FloorDel") || User.IsInRole("FloorFull") || User.IsInRole("AdminFull"))
                    {
                        <a asp-action="Delete" asp-route-floorid="@item.FloorID">
                            <i class="lni lni-circle-minus"></i>
                        </a>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>
