@model GD.FinishingSystem.Entities.Machine

@{

}

<div class="alert alert-info">
    <h1 class="mt-4">
        @if (Model.DefinationProcessID == 0)
        {
            @Html.Raw("Create")
            ViewData["Title"] = "Create Definition Information";
        }
        else
        {
            @Html.Raw("Edit")
            ViewData["Title"] = "Edit Definition Information";
        }
    </h1>

    <h4>Machine</h4>
    <hr />
</div>

<div class="alert alert-success">
    <form asp-action="Save">
        @Html.HiddenFor(model => model.MachineID)
        @Html.HiddenFor(model => model.DefinationProcessID)
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="row">
            @*<div class="col-lg-3 col-md-4 col-ms-12">
                    <div class="form-group">
                        <label asp-for="MachineID" class="control-label"></label>
                        <input asp-for="MachineID" class="form-control" />
                        <span asp-validation-for="MachineID" class="text-danger"></span>
                    </div>
                </div>*@
            @*<div class="col-lg-3 col-md-4 col-ms-12">
                <div class="form-group">
                    <label asp-for="DefinationProcessID" class="control-label"></label>
                    <input asp-for="DefinationProcessID" class="form-control" />
                    <span asp-validation-for="DefinationProcessID" class="text-danger"></span>
                </div>
            </div>*@
            <div class="col-lg-3 col-md-4 col-ms-12">
                <div class="form-group">
                    <label asp-for="MachineCode" class="control-label"></label>
                    <input asp-for="MachineCode" class="form-control" />
                    <span asp-validation-for="MachineCode" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-ms-12">
                <div class="form-group">
                    <label asp-for="MachineName" class="control-label"></label>
                    <input asp-for="MachineName" class="form-control" />
                    <span asp-validation-for="MachineName" class="text-danger"></span>
                </div>
            </div>

            @if ((bool)ViewBag.Error)
            {
                <hr />
                <div class="alert alert-danger">
                    @Html.Raw(ViewBag.ErrorMessage)
                </div>
            }

            <div class="col-12">
                <div class="form-group">
                    @if (Model.MachineID == 0)
                    {
                        <button type="submit" class="btn btn-primary"><i class="lni lni-circle-plus"></i> Create</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-success"><i class="lni lni-save"></i> Save Changes</button>
                    }

                </div>
            </div>

        </div>
    </form>
</div>

<div>
    <a asp-action="Index" asp-route-reldefinationprocessid="@Model.DefinationProcessID" class="btn btn-sm btn-secondary"><i class="lni lni-chevron-left-circle"></i> Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
