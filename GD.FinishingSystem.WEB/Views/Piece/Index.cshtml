@model IEnumerable<GD.FinishingSystem.Entities.Piece>

@{
    var ruloId = ViewBag.RuloId;
}

<div class="row">
    <h1 class="mt-4">Piece</h1>
    <h1 id="titleRulos" class="mt-4"></h1>
</div>

@if (User.IsInRole("Piece", AuthType.Add))
{
    <p>
        <a asp-action="Create" asp-route-ruloid="@ruloId" class="btn btn-sm btn-outline-light border-dark btn-dark">
            <i class="lni lni-circle-plus"></i> Create New
        </a>
    </p>
}

<table class="table table-sm table-hover table-responsive-lg">
    <thead>
        <tr>
            <th colspan="5">
                <div>
                    Piece List
                </div>
            </th>
        </tr>
        <tr>
            <th>
                <i class="lni lni-line-dashed"></i>
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.PieceNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PieceID)
                </td>
              
                <td>
                    @Html.DisplayFor(modelItem => item.PieceNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Meter)
                </td>
                <td>
                    <div style="display:block;width:107px;">
                        @if (User.IsInRole("Piece", AuthType.Update))
                        {
                            <a asp-controller="Rulo" asp-action="Edit" asp-route-pieceid="@item.PieceID">
                                <i class="lni lni-slice"></i>
                            </a>
                        }

                        @if (User.IsInRole("Piece", AuthType.Show))
                        {
                            if (User.IsInRole("Piece", AuthType.Update))
                                @Html.Raw(" | ")

                                <a asp-controller="Rulo" asp-action="Details" asp-route-pieceid="@item.PieceID">
                                    <i class="lni lni-question-circle"></i>
                                </a>
                            }

                        @if (User.IsInRole("Piece", AuthType.Delete))
                        {
                            if (User.IsInRole("Piece", AuthType.Update) || User.IsInRole("Piece", AuthType.Show))
                                @Html.Raw(" | ")

                                <a asp-controller="Rulo" asp-action="Delete" asp-route-pieceid="@item.PieceID">
                                    <i class="lni lni-circle-minus"></i>
                                </a>
                            }
                        @if (User.IsInRole("Piece", AuthType.Show))
                        {
                            if (User.IsInRole("Piece", AuthType.Update) || User.IsInRole("Piece", AuthType.Show) || User.IsInRole("Piece", AuthType.Delete))
                                @Html.Raw(" | ")

                                <a alt="Rulo" onclick="showRulo(@item.RuloID);" href="#" data-toggle="modal" data-target="#modalDialogRulo">
                                    <i class="lni lni-direction-alt"></i>
                                </a>
                            }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="modalDialogRulo" tabindex="-1" role="dialog" width="350px" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Rulo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="ruloInfo"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showRulo(ruloId) {

        $.ajax({
            url: "/Rulo/GetRulo",
            type: "GET",
            data:
            {
                RuloId: ruloId
            },
            success: function (data) {
                document.getElementById('ruloInfo').innerHTML = data;

            },
            error: function (xhr, ajaxOptions, thrownError) {
                alert("Something went wrong!");
            }
        });

    }
</script>
