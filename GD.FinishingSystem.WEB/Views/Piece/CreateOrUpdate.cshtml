@model GD.FinishingSystem.Entities.Piece

<div class="alert alert-info">
    <h1 class="mt-4">
        @if (Model.PieceID == 0)
        {
            @Html.Raw("Create");
            ViewData["Title"] = "Create Piece Information";
        }
        else
        {
            @Html.Raw("Edit");
            ViewData["Title"] = "Edit Piece Information";
        }
    </h1>
    <h4>Piece Information</h4>
    <hr />

</div>

<div class="alert alert-success">
    <form asp-action="Save">
        @Html.HiddenFor(x => x.RuloID)
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="PieceNo" class="control-label"></label>
                    <input asp-for="PieceNo" class="form-control" />
                    <span asp-validation-for="PieceNo" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="Meter" class="control-label"></label>
                    <input asp-for="Meter" class="form-control" />
                    <span asp-validation-for="Meter" class="text-danger"></span>
                </div>
            </div>

            @if ((bool)ViewBag.Error)
            {
                <hr />
                <div class="alert alert-danger">
                    @Html.Raw(ViewBag.ErrorMessage)
                </div>

            }

            <div class="col-12">
                <div class="form-group">
                    @if (Model.PieceID == 0)
                    {
                        <button type="submit" class="btn btn-primary"><i class="lni lni-circle-plus"></i> Create</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-success"><i class="lni lni-save"></i> Save Changes</button>
                    }
                </div>
            </div>

        </div>

    </form>
</div>


<div>
    <a asp-action="Index" asp-route-ruloid="@Model.RuloID" class="btn btn-sm btn-secondary"><i class="lni lni-chevron-left-circle"></i> Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
