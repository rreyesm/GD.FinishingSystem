@model GD.FinishingSystem.Entities.Rulo

@{
    // Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="alert alert-info">
    <h1 class="mt-4">
        @if (Model.RuloID == 0)
        {
            @Html.Raw("Create")
            ViewData["Title"] = "Create Rulo Information";
        }
        else
        {
            @Html.Raw("Edit")
            ViewData["Title"] = "Edit Rulo Information";
        }
    </h1>

    <h4>Rulo Information</h4>
    <hr />

</div>


<div class="alert alert-success">
    <form asp-action="Save" onsubmit="enableFields()">
        @Html.HiddenFor(o => o.RuloID)
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">

            @if (User.IsInRole("RuloTest", AuthType.Add) || User.IsInRole("RuloTest", AuthType.Full))
            {
                <div class="col-lg-3 col-md-4 col-sm-12">
                    <div class="form-group">
                        <label asp-for="IsTestStyle" class="control-label"></label>
                        <input type="checkbox" asp-for="IsTestStyle" class="form-control input-xs" onclick="setStyleTest();" />
                    </div>
                </div>
            }

            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="Lote" class="control-label"></label>
                    <input asp-for="Lote" class="form-control" onfocusout="getStyleData()" />
                    <span asp-validation-for="Lote" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="Beam" class="control-label"></label>
                    <input asp-for="Beam" class="form-control" type="number" />
                    <span asp-validation-for="Beam" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="BeamStop" class="control-label"></label>
                    <input asp-for="BeamStop" class="form-control" />
                    <span asp-validation-for="BeamStop" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="Loom" class="control-label"></label>
                    <input asp-for="Loom" class="form-control" type="number" />
                    <span asp-validation-for="Loom" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="IsToyota" class="control-label"></label>
                    <input type="checkbox" asp-for="IsToyota" class="form-control input-xs" />
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="Style" class="control-label"></label>
                    <input asp-for="Style" class="form-control" disabled />
                    <span asp-validation-for="Style" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="StyleName" class="control-label"></label>
                    <input asp-for="StyleName" class="form-control" disabled />
                    <span asp-validation-for="StyleName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="Width" class="control-label"></label>
                    <input asp-for="Width" class="form-control" />
                    <span asp-validation-for="Width" class="text-danger"></span>
                </div>
            </div>
            @if ((bool)ViewBag.OriginEnabled == false) //If origin is enabled, it is a reprocess, therefore people can't enter value in Weaving value and this will be 0.
            {
                <div class="col-lg-3 col-md-4 col-sm-12">
                    <div class="form-group">
                    <label asp-for="WeavingLength" class="control-label"></label>
                    <input asp-for="WeavingLength" class="form-control" type="number" />
                    <span asp-validation-for="WeavingLength" class="text-danger"></span>
                </div>
            </div>
            }
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="EntranceLength" class="control-label"></label>
                    <input asp-for="EntranceLength" class="form-control" type="number" />
                    <span asp-validation-for="EntranceLength" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="Shift" class="control-label"></label>
                    <input asp-for="Shift" class="form-control" type="number" />
                    <span asp-validation-for="Shift" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="MainOriginID" class="control-label"></label>
                    @if ((bool)ViewBag.OriginEnabled) //If origin is enabled, it is a reprocess and people can modify main origin and origin, otherwise people can't modify
                    {
                        <select asp-for="MainOriginID" asp-items="@ViewBag.MainOriginList" class="form-control"></select>
                    }
                    else
                    {
                        <select asp-for="MainOriginID" asp-items="@ViewBag.MainOriginList" class="form-control" disabled></select>
                    }
                    <span asp-validation-for="MainOriginID" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="OriginID" class="control-label"></label>
                    @if ((bool)ViewBag.OriginEnabled)
                    {
                        <select asp-for="OriginID" asp-items="@ViewBag.OriginList" class="form-control"></select>
                    }
                    else
                    {
                        <select asp-for="OriginID" asp-items="@ViewBag.OriginList" class="form-control" disabled></select>
                    }
                    <span asp-validation-for="OriginID" class="text-danger"></span>
                </div>
            </div>

            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="Observations" class="control-label"></label>
                    <textarea asp-for="Observations" rows="3" class="form-control"></textarea>
                    <span asp-validation-for="Observations" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="FolioNumber" class="control-label"></label>
                    <input asp-for="FolioNumber" class="form-control" type="number" />
                    <span asp-validation-for="FolioNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12">

                @if ((bool)ViewBag.Error)
                {
                    <hr />
                    <div class="alert alert-danger">
                        @Html.Raw(ViewBag.ErrorMessage)
                    </div>

                }

                <div class="form-group">
                    @if (Model.RuloID == 0)
                    {
                        <button type="submit" class="btn btn-primary"><i class="lni lni-circle-plus"></i> Create</button>
                    }
                    else
                    {
                        if (Model.TestResultID == null) //If test result is null show button processes
                        {
                            <button type="submit" class="btn btn-success"><i class="lni lni-save"></i> Save Changes</button>
                        }
                    }
                </div>

            </div>
        </div>

    </form>
</div>



<div>
    <a asp-action="Index" class="btn btn-sm btn-secondary"><i class="lni lni-chevron-left-circle"></i> Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script>
    function getStyleData() {
        var isTestStyle = false;

        if (document.getElementById("IsTestStyle"))
            isTestStyle = document.getElementById("IsTestStyle").checked;

        if (!isTestStyle) {

            let loteRulo = $("#Lote").val();

            if (!isNaN(loteRulo)) {
                if (loteRulo != 0) {
                    $.ajax({
                        url: "/Rulo/GetStyleData",
                        type: "POST",
                        data: {
                            lote: loteRulo
                        },
                        success: function (data) {
                            if (data) {
                                if (data.errorMessage == "") {
                                    $("#Style").val(data.style);
                                    $("#StyleName").val(data.styleName);
                                }
                                else
                                    alert(data.errorMessage);
                            }
                        },
                        error: function (xhr, ajaxOptions, thrownError) {
                            alert("404 Not found!");
                        }
                    })
                }
            }
            else {
                $("#Style").val("");
                $("#StyleName").val("");
            }

        }

    }

    window.load = setStyleTest();

    function setStyleTest() {
        if (document.getElementById('IsTestStyle')) {
            if (document.getElementById('IsTestStyle').checked) {
                document.getElementById('Style').disabled = false;
                document.getElementById('StyleName').disabled = false;
            } else {
                document.getElementById('Style').disabled = true;
                document.getElementById('StyleName').disabled = true;
            }
        }
    }

    function enableFields(){
        document.getElementById("MainOriginID").disabled = false;
        document.getElementById("OriginID").disabled = false;
    }

</script>
