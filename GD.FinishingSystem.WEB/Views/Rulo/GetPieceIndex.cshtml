@model IEnumerable<GD.FinishingSystem.Entities.Piece>

@{
    var ruloId = ViewBag.RuloId;
}

<h1>Pieces List</h1>

@if (User.IsInRole("Piece", AuthType.Add))
{
<p>
    <a onclick="createOrUpdatePiece(@ruloId,0)" class="btn btn-sm btn-outline-light border-dark btn-dark" role="button" data-backdrop="static" data-keyboard="false" href="#" data-target="#modalDialogPieces">
        <i class="lni lni-circle-plus"></i> Create New
    </a>
</p>
}

<table class="table table-sm table-hover table-responsive-lg">
    <thead>
        <tr>
            <th colspan="5">
                <div>
                    Piece List
                </div>
            </th>
        </tr>
        <tr>
            <th>
                <i class="lni lni-line-dashed"></i>
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.PieceNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meter)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PieceID)
                </td>
               
                <td>
                    @Html.DisplayFor(modelItem => item.PieceNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Meter)
                </td>
                <td>
                    <div style="display:block;width:107px;">
                        @if (User.IsInRole("Piece", AuthType.Update))
                        {
                            <a onclick="createOrUpdatePiece(@item.RuloID,@item.PieceID)" role="button" data-backdrop="static" data-keyboard="false" href="#" data-target="#modalDialogPieces">
                                <i class="lni lni-slice"></i>
                            </a>
                        }

                        @if (User.IsInRole("Piece", AuthType.Show))
                        {
                            if (User.IsInRole("Piece", AuthType.Update))
                                @Html.Raw(" | ")

                                <a onclick="detailsPiece(@item.PieceID)" role="button" data-backdrop="static" data-keyboard="false" href="#" data-target="#modalDialogPieces">
                                    <i class="lni lni-question-circle"></i>
                                </a>
                            }

                        @if (User.IsInRole("Piece", AuthType.Delete))
                        {
                            if (User.IsInRole("Piece", AuthType.Update) || User.IsInRole("Piece", AuthType.Show))
                                @Html.Raw(" | ")

                                <a onclick="deletePiece(@item.PieceID)" role="button" data-backdrop="static" data-keyboard="false" href="#" data-target="#modalDialogPieces">
                                    <i class="lni lni-circle-minus"></i>
                                </a>

                            }

                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
