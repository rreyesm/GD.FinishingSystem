@model GD.FinishingSystem.Entities.SystemPrinter

<div class="alert alert-info">
    <h1>
        @if (Model.SystemPrinterID == 0)
        {
            @Html.Raw("Create")
            ViewData["Title"] = "Create System Printer";
        }
        else
        {
            @Html.Raw("Edit")
            ViewData["Title"] = "Edit System Printer";
        }

    </h1>
    <h4>SystemPrinter</h4>
    <hr />
</div>

<div class="alert alert-success">
    <form asp-action="Save">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            @Html.HiddenFor(model => model.SystemPrinterID)
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="IsPrinterIP" class="control-label"></label>
                    <input type="checkbox" asp-for="IsPrinterIP" class="form-control input-xs" />
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="Location" class="control-label"></label>
                    <input asp-for="Location" class="form-control" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="PCIP" class="control-label"></label>
                    <input asp-for="PCIP" class="form-control" />
                    <span asp-validation-for="PCIP" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="FloorID" class="control-label"></label>
                    <select asp-for="FloorID" class="form-control" asp-items="@ViewBag.foorList"></select>
                    <span asp-validation-for="FloorID" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-3 col-md-4 col-sm-12">
                <div class="form-group">
                    <label asp-for="MachineID" class="control-label"></label>
                    <select asp-for="MachineID" class="form-control" asp-items="@ViewBag.machineList"></select>
                    <span asp-validation-for="MachineID" class="text-danger"></span>
                </div>
            </div>

            <div class="col-12">
                @if ((bool)ViewBag.Error)
                {
                    <hr />
                    <div class="alert-danger">
                        @Html.Raw(ViewBag.ErrorMessage)
                    </div>
                }

                <div class="form-group">
                    @if (Model.SystemPrinterID == 0)
                    {
                        <button type="submit" class="btn btn-primary"><i class="lni lni-circle-plus"></i> Create</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-success"><i class="lni lni-save"></i> Save Changes</button>
                    }
                </div>
            </div>

        </div>
    </form>

</div>

<div>
    <a asp-action="Index" class="btn btn-sm btn-secondary"><i class="lni lni-chevron-left-circle"></i> Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
