@model GD.FinishingSystem.Entities.SampleDetail

<div class="alert alert-info">
    <h1 class="mt-4">
        @if (Model.SampleDetailID == 0)
        {
            @Html.Raw("Create")
            ViewData["Title"] = "Create Sample Detils";
        }
        else
        {
            @Html.Raw("Edit")
            ViewData["Title"] = "Edit Sample Details";
        }
    </h1>

    <h4>Sample Details</h4>
    <hr />
</div>

<div class="alert alert-success">
    <form asp-action="Save">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(model => model.SampleDetailID)
        @Html.HiddenFor(model => model.SampleID)
        @Html.HiddenFor(model => model.RuloID)
        @Html.HiddenFor(model => model.RuloProcessID)
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label asp-for="Meter" class="control-label"></label>
                    <input asp-for="Meter" class="form-control" />
                    <span asp-validation-for="Meter" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateTime" class="control-label"></label>
                    <input asp-for="DateTime" class="form-control" />
                    <span asp-validation-for="DateTime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Details" class="control-label"></label>
                    <textarea asp-for="Details" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Details" class="text-danger"></span>
                </div>

            </div>

            @if ((bool)ViewBag.Error)
            {
                <hr />
                <div class="alert-danger">
                    @Html.Raw(ViewBag.ErrorMessage)
                </div>
            }

            <div class="col-12">
                <div class="form-group">
                    @if (Model.SampleDetailID == 0)
                    {
                        <button type="submit" class="btn btn-primary"><i class="lni lni-circle-plus"></i> Create</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-success"><i class="lni lni-save"></i> Save Changes</button>
                    }

                </div>
            </div>

        </div>
    </form>

</div>

<div>
    <a asp-action="Index" asp-route-sampleid="@Model.SampleID" class="btn btn-sm btn-secondary"><i class="lni lni-chevron-left-circle"></i> Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
