@model IEnumerable<GD.FinishingSystem.Entities.OriginCategory>

@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-4">Origins</h1>

@if (true)
{
<p>
    <a asp-action="Create" class="btn btn-sm btn-outline-light border-dark btn-dark">
    <i class="lni lni-circle-plus"></i> Create New</a>
</p>
}

<table class="table table-sm table-hover table-responsive-md">
    <thead>
        <tr>
            <th colspan="4">Origin list</th>
        </tr>
        <tr>
            <th>
                <i class="lni lni-line-dashed"></i>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OriginCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OriginCategoryID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriginCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @if (User.IsInRole("OriginCategoryUp") || User.IsInRole("OriginCategoryFull") || User.IsInRole("AdminFull"))
                {
                    <a asp-action="Edit" asp-route-origincategoryid="@item.OriginCategoryID">
                        <i class="lni lni-slice"></i>
                    </a>
                    @Html.Raw(" | ");
                }
                @if (User.IsInRole("OriginCategoryShow") || User.IsInRole("OriginCategoryFull") || User.IsInRole("AdminFull"))
                {
                    <a asp-action="Details" asp-route-origincategoryid="@item.OriginCategoryID">
                        <i class="lni lni-question-circle"></i>
                    </a>
                    @Html.Raw(" | ");
                }
                @if (User.IsInRole("FloorDel") || User.IsInRole("FloorFull") || User.IsInRole("AdminFull"))
                {
                    <a asp-action="Delete" asp-route-origincategoryid="@item.OriginCategoryID">
                        <i class="lni lni-circle-minus"></i>
                    </a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
